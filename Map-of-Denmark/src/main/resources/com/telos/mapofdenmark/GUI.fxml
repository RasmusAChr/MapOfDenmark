<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.telos.mapofdenmark.Controller">
   <children>
      <VBox HBox.hgrow="ALWAYS">
         <children>
            <BorderPane VBox.vgrow="ALWAYS">
               <left>
                  <VBox id="btnHub" fx:id="btnHub" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="638.0" prefWidth="100.0" style="-fx-background-color: #dcdde1;" BorderPane.alignment="CENTER">
                     <children>
                        <StackPane prefHeight="94.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Button id="fileBtn" fx:id="fileBtn" mnemonicParsing="false" onAction="#readFile" prefHeight="94.0" prefWidth="100.0" />
                              <ImageView fitHeight="60.0" fitWidth="54.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@GUI%20Icons/icons8-folder-512.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </StackPane>
                        <StackPane prefHeight="94.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Button fx:id="markerBtn" mnemonicParsing="false" onAction="#placeInterest" prefHeight="94.0" prefWidth="100.0" />
                              <ImageView fitHeight="60.0" fitWidth="54.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@GUI%20Icons/icons8-place-marker-100.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </StackPane>
                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="375.0" prefWidth="100.0" VBox.vgrow="ALWAYS" />
                        <StackPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="94.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                           <children>
                              <ToggleButton fx:id="themeToggleBtn" mnemonicParsing="false" onMouseClicked="#toggleTheme" prefHeight="42.0" prefWidth="90.0" style="-fx-background-radius: 50;" stylesheets="@Togglebutton.css" text="Dark/Light" />
                           </children>
                        </StackPane>
                     </children>
                  </VBox>
               </left>
               <top>
                  <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="53.0" prefWidth="1190.0" style="-fx-background-color: #273c75;" BorderPane.alignment="CENTER">
                     <children>
                        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                           <children>
                              <TextField prefHeight="54.0" prefWidth="334.0" style="-fx-background-radius: 50;" HBox.hgrow="ALWAYS" />
                              <ImageView fitHeight="47.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@GUI%20Icons/icons8-search-500.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </HBox>
                        <ImageView fx:id="sliderEmoji" fitHeight="47.0" fitWidth="44.0">
                           <image>
                              <Image url="@GUI%20Icons/icons8-search-500.png" />
                           </image>
                        </ImageView>
                     </children>
                  </HBox>
               </top>
               <right>
                  <Slider fx:id="zoomSlider" orientation="VERTICAL" prefHeight="529.0" prefWidth="110.0" BorderPane.alignment="CENTER" />
               </right>
               <center>
                  <Pane fx:id="mapPane" prefHeight="638.0" prefWidth="1091.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </children>
      </VBox>
   </children>
